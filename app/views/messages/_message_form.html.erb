<%= form_for :message, url: url_for({controller: 'messages', action: 'create'}),
              remote: true,
              html: { id: 'message_form' },
              authenticity_token: true do |f| %>
  <%= f.label :your_message %>
  <%= f.text_area :content, class: "form-control", cols: 100 %>

  <%= f.hidden_field :channel_id, value: channel.id %>
  <%= f.submit "send", class: "btn btn-primary", data: {send: "message"} %>
<% end %>
